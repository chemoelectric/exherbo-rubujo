require distutils

SUMMARY="hg-git, a plugin for Mercurial to let it push to and pull from a Git server"
HOMEPAGE="http://hg-git.github.com/"
DOWNLOADS="http://github.com/schacon/hg-git/tarball/0.2.1 -> ${PNV}.tar.gz"

LICENCES="GPL-2"
SLOT="0"
PLATFORMS="~amd64"
MYOPTIONS=""

DEPENDENCIES="
    build+run:
        !dev-scm/hg-git-brainsik
        dev-lang/python
    run:
        dev-python/dulwich[>=0.3.2&<scm]
        dev-scm/mercurial[>=1.3]
"

WORK="${WORKBASE}/schacon-hg-git-900b5c2"

pkg_postinst()
{
    ewarn ""
    ewarn "Be sure to put entries like these in"
    ewarn "the 'extensions' section of your ~/.hgrc file:"
    ewarn ""
    ewarn "[extensions]"
    ewarn "hgext.bookmarks ="
    ewarn "hggit ="
    ewarn ""
}
