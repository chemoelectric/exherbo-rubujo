SUMMARY="ocaml-make, automated compilation of complex OCaml-projects"
HOMEPAGE="http://ocaml.info/home/ocaml_sources.html"
DOWNLOADS="http://hg.ocaml.info/release/${PN}/archive/release-${PV}.tar.bz2"

LICENCES="LGPL-2.1"
SLOT="0"
PLATFORMS="~amd64"
MYOPTIONS="examples"

DEPENDENCIES=""

WORK="${WORKBASE}/${PN}-release-${PV}"

src_install()
{
    default
    insinto "/usr/share/${PN}"
    doins OCamlMakefile
    if option examples ; then
        edo mkdir examples
        edo mv calc camlp4 gtk idl threads examples
        dodoc -r examples
    fi
}
