require gnome.org

SUMMARY="GL extensions for GTK+"
HOMEPAGE="http://www.gnome.org/"

LICENCES="GPL-2 LGPL-2.1"
SLOT="2"
PLATFORMS="~amd64"
MYOPTIONS="examples"

DEPENDENCIES="
    build+run:
        x11-libs/gtk+[>=2.0.3]
        x11-dri/freeglut
        x11-dri/mesa
        x11-libs/libX11
        x11-libs/libICE
    build:
        dev-util/pkg-config
"

DEFAULT_SRC_CONFIGURE_PARAMS=( --hates=docdir )

src_install()
{
    default
    if option examples ; then
        edo cd "${WORK}/examples"
        insinto /usr/share/doc/${PNVR}/examples
        doins *.c *.h *.lwo README
    fi
}
